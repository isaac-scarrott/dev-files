{
  "notification_panel": {
    "dock": "left"
  },
  "chat_panel": {
    "dock": "left"
  },
  "assistant": {
    "dock": "left",
    "version": "2"
  },
  "theme": "Kanagawa Wave",
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "buffer_font_family": "FiraMono Nerd Font",
  "relative_line_numbers": true,
  "cursor_blink": false,
  "scrollbar": {
    "show": "never"
  },
  "terminal": {
    "font_family": "FiraMono Nerd Font"
  },
  "project_panel": {
    "dock": "right"
  },
  "preview_tabs": {
    "enabled": true,
    "enable_preview_from_file_finder": true,
    "enable_preview_from_code_navigation": true
  }
}
